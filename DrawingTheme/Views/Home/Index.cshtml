@{ 
    int RoleId = ViewBag.RoleId;
}



<div class="block-header py-lg-2 py-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-4 col-sm-12">
                <h4>Dashboard</h4>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="fa fa-dashboard"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ul>
            </div>

        </div>
    </div>
</div>
<!-- Body: Body -->
<div class="body d-flex ">
    <div class="container-fluid">
        <div class="row clearfix">
            @if (RoleId == 1)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card">
                        <div class="card-body top_counter">
                            <div class="icon bg-yellow"><i class="fa fa-users"></i> </div>
                            <div class="content">
                                <span>Total Customers</span>
                                <h5 class="number mb-0">@ViewBag.TotalCustomer</h5>
                            </div>
                        </div>
                    </div>
                </div>}
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body top_counter">
                        <div class="icon bg-green"><i class="fa fa-area-chart"></i> </div>
                        <div class="content">
                            <span> Successful Transaction</span>
                            
                            <h5 class="number mb-0">@ViewBag.TotalSuccessfull</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body top_counter">
                        <div class="icon bg-orange"><i class="fa fa-area-chart"></i> </div>
                        <div class="content">
                            <span> Pending Transaction</span>
                         
                            <h5 class="number mb-0">@ViewBag.TotalPending</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body top_counter">
                        <div class="icon bg-blue"><i class="fa fa-sort-amount-asc"></i> </div>
                        <div class="content">
                            <span>Total Sales</span>
                            <h5 class="number mb-0">$ @ViewBag.TotalSuccessfullAmount</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body top_counter">
                        <div class="icon bg-red"><i class="fa fa-sort-amount-desc"></i> </div>
                        <div class="content">
                            <span>Pending Amount</span>
                            <h5 class="number mb-0">$ @ViewBag.TotalPendingAmount</h5>
                        </div>
                    </div>
                </div>
            </div>
            @if (RoleId == 1)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card">
                        <div class="card-body top_counter">
                            <div class="icon bg-indigo"><i class="fa fa-tag"></i> </div>
                            <div class="content">
                                <span>Total Components</span>
                                <h5 class="number mb-0">@ViewBag.TotalComponent</h5>
                            </div>
                        </div>
                    </div>
                </div>}
        </div>
     
    </div>
</div>
<script src="~/assets/js/jquery-3.2.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(".nav1 li").removeClass("active");
        $('#Dashboard').addClass('active');

    });
</script>