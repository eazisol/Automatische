@model DrawingTheme.Models.tblSubCategory
@{
    ViewBag.Title = "AddSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int SCV = 0;
}

<div class="body d-flex profile-page">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div style="display:none;" class="alert alert-success alert-dismissible fade show" id="SuccessAlert" role="alert">
                    <strong>Success!</strong> @ViewBag.Success
                </div>
                <div style="display:none;" class="alert alert-info alert-dismissible fade show" id="UpdateAlert" role="alert">
                    <strong>Success!</strong> @ViewBag.Update
                </div>
                <div style="display:none;" class="alert alert-warning alert-dismissible fade show" id="DeleteAlert" role="alert">
                    <strong>Success!</strong> @ViewBag.Delete
                </div>
                <div style="display:none;" class="alert alert-danger alert-dismissible fade show" id="error" role="alert">
                    @ViewBag.Error
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Resources.AddNewSubCategory</h3>
                    </div>
                    <div class="card-body pt-0">
                        @using (Html.BeginForm("AddSubCategory", "SubCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {@Html.AntiForgeryToken()
                        <div class="row clearfix">
                            <div class="col-3">
                                <div class="form-group">
                                    <label>@Resources.Category</label>
                                    <select class="form-control" name="CategoryID" id="CategoryID">
                                        <option value="">Select Category</option>
                                        @foreach (DrawingTheme.Models.tblCategory item in ViewBag.Category)
                                        {
                                            if (@Model.CategoryID == @item.CategoryID)
                                            {
                                                <option value="@item.CategoryID" selected>@item.CategoryName</option>
                                                SCV = @item.CategoryID;
                                            }
                                            else
                                            {
                                                <option value="@item.CategoryID">@item.CategoryName</option>
                                            }

                                        }
                                    </select>
                                </div>
                            </div>




                            <div class="col-3">
                                <div class="form-group">
                                    <label>@Resources.NAME</label>
                                    <input type="text" hidden class="form-control" id="SubcategoryID" name="SubcategoryID" value="@Model.SubcategoryID">
                                    <input type="text" class="form-control" id="SubcategoryName" name="SubcategoryName" value="@Model.SubcategoryName" placeholder="First Name" required>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group multiselect_div">
                                    <label>@Resources.Unit</label>
                                    <select id="Unit" name="Unit" class="form-control">
                                        <option value=""></option>
                                        @if (Model.Unit == "Meter")
                                        {
                                            <option value="Meter" selected>Meter</option>
                                            <option value="Piece">Piece</option>
                                        }
                                        else if (Model.Unit == "Piece")
                                        {
                                            <option value="Piece" selected>Piece</option>
                                            <option value="Meter">Meter</option>
                                        }
                                        else
                                        {
                                            <option value="Meter">Meter</option>
                                            <option value="Piece">Piece</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label>@Resources.PRICE</label>
                                    <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" placeholder="Price" required>
                                </div>
                            </div>



                            <div class="col-ms-12" style="display:none;" id="SDiv">
                                <div class="row">

                                    <div class="col-3">
                                        <div class="form-group multiselect_div">
                                            <label>@Resources.SprinklerType </label>
                                            <select id="SprinklerType" name="SprinklerType" class="form-control">
                                                <option value=""></option>
                                                @if (Model.Unit == "Round")
                                                {
                                                    <option value="Round" selected>Round</option>
                                                    <option value="Rectangle">Rectangle</option>
                                                }
                                                else if (Model.Unit == "Rectangle")
                                                {
                                                    <option value="Rectangle" selected>Rectangle</option>
                                                    <option value="Round">Round</option>
                                                }
                                                else
                                                {
                                                    <option value="Rectangle">Rectangle</option>
                                                    <option value="Round">Round</option>
                                                }

                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.MinAngle</label>
                                            <input type="number" class="form-control" id="MinAngle" name="MinAngle" value="@Model.MinAngle">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.MaxAngle</label>
                                            <input type="number" class="form-control" id="MaxAngle" name="MaxAngle" value="@Model.MaxAngle">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.ThrowDistanceMin</label>
                                            <input type="number" class="form-control" id="ThrowDistanceMin" name="ThrowDistanceMin" value="@Model.ThrowDistanceMin">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.ThrowDistanceMax</label>
                                            <input type="number" class="form-control" id="ThrowDistanceMax" name="ThrowDistanceMax" value="@Model.ThrowDistanceMax">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.ThrowWidth</label>
                                            <input type="number" class="form-control" id="ThrowWidth" name="ThrowWidth" value="@Model.ThrowWidth">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.ThrowHeight</label>
                                            <input type="number" class="form-control" id="ThrowHeight" name="ThrowHeight" value="@Model.ThrowHeight">
                                        </div>
                                    </div>

                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mhgeneral</label>
                                            <input type="number" class="form-control" id="mhgeneral" name="mhgeneral" value="@Model.mhgeneral">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh45</label>
                                            <input type="number" class="form-control" id="mh45" name="mh45" value="@Model.mh45">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh90</label>
                                            <input type="number" class="form-control" id="mh90" name="mh90" value="@Model.mh90">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh105</label>
                                            <input type="number" class="form-control" id="mh105" name="mh105" value="@Model.mh105">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh180</label>
                                            <input type="number" class="form-control" id="mh180" name="mh180" value="@Model.mh180">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh210</label>
                                            <input type="number" class="form-control" id="mh210" name="mh210" value="@Model.mh210">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh270</label>
                                            <input type="number" class="form-control" id="mh270" name="mh270" value="@Model.mh270">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.mh360</label>
                                            <input type="number" class="form-control" id="mh360" name="mh360" value="@Model.mh360">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12" style="display:none;" id="VBDiv">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>@Resources.valveboxcircle</label>
                                            <input type="number" class="form-control" id="valveboxcircle" name="valveboxcircle" value="@Model.valveboxcircle">
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <label>@Resources.valveboxFilter</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.valveboxFilter == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="valveboxFilter" name="valveboxFilter" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="valveboxFilter" name="valveboxFilter" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>
                                    </div>
                                    <div class="col-md-2">
                                        <label>@Resources.drinkingwatersource</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.drinkingwatersource == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="drinkingwatersource" name="drinkingwatersource" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="drinkingwatersource" name="drinkingwatersource" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>
                                    </div>
                                    <div class="col-md-2">
                                        <label>@Resources.wellwatersource</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.wellwatersource == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="wellwatersource" name="wellwatersource" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="wellwatersource" name="wellwatersource" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>


                                    </div>
                                    <div class="col-md-2">
                                        <label>@Resources.rainwatersource</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.rainwatersource == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="rainwatersource" name="rainwatersource" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="rainwatersource" name="rainwatersource" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>
                                    </div>
                                </div>

                            </div>

                            <div class="col-3" style="display:none;" id="PDiv">
                                <div class="form-group">
                                    <label>@Resources.PipelineMaxLength</label>
                                    <input type="number" class="form-control" id="PipelineMaxLength" name="PipelineMaxLength" value="@Model.PipelineMaxLength">
                                </div>
                            </div>
                            <div class="col-3" style="display:none;" id="WDiv">
                                <div class="form-group">
                                    <label>@Resources.IrrigationWiringMaxStation</label>
                                    <input type="number" class="form-control" id="IrrigationWiringMaxStation" name="IrrigationWiringMaxStation" value="@Model.IrrigationWiringMaxStation">
                                </div>
                            </div>

                            <div class="col-ms-12" style="display:none;" id="CDiv">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label>@Resources.IrrigationComputermaxstation</label>
                                            <input type="number" class="form-control" id="IrrigationComputermaxstation" name="IrrigationComputermaxstation" value="@Model.IrrigationComputermaxstation">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <label>@Resources.IrrigationComputerindoor</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.IrrigationComputerindoor == true)
                                            {
                                                    <input type="checkbox" class="custom-control-input" id="IrrigationComputerindoor" name="IrrigationComputerindoor" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="IrrigationComputerindoor" name="IrrigationComputerindoor" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>

                                    </div>
                                    <div class="col-3">
                                        <label>@Resources.IrrigationComputeroutdoor</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.IrrigationComputeroutdoor == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="IrrigationComputeroutdoor" name="IrrigationComputeroutdoor" value="True"  checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="IrrigationComputeroutdoor" name="IrrigationComputeroutdoor" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>

                                    </div>
                                    <div class="col-3">
                                        <label>@Resources.IrrigationComputersmarphone</label>
                                        <br>
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            @if (Model.IrrigationComputersmarphone == true)
                                            {
                                                <input type="checkbox" class="custom-control-input" id="IrrigationComputersmarphone" name="IrrigationComputersmarphone" value="True" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input" id="IrrigationComputersmarphone" name="IrrigationComputersmarphone" value="True">
                                            }
                                            
                                            <span class="custom-control-label">@Resources.Active</span>
                                        </label>

                                    </div>
                                </div>

                            </div>



                            <div class="col-3">
                                <label>@Resources.Plannercomponent</label>
                                <br>
                                <label class="custom-control custom-checkbox custom-control-inline">
                                    @if (Model.Plannercomponent == true)
                                    {
                                        <input type="checkbox" class="custom-control-input" id="Plannercomponent" name="Plannercomponent" value="True" checked>
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="custom-control-input" id="Plannercomponent" name="Plannercomponent" value="True">
                                    }
                                    
                                    <span class="custom-control-label">@Resources.Active</span>
                                </label>

                            </div>
                            <div class="col-3">
                                <label>@Resources.BOMRelevant</label>
                                <br>
                                <label class="custom-control custom-checkbox custom-control-inline">
                                    @if (Model.BOMRelevant == true)
                                    {
                                        <input type="checkbox" class="custom-control-input" id="BOMRelevant" name="BOMRelevant" value="True" checked>
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="custom-control-input" id="BOMRelevant" name="BOMRelevant" value="True">
                                    }
                                    <span class="custom-control-label">@Resources.Active</span>
                                </label>

                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="file" class="form-control-file" id="Image"
                                           aria-describedby="fileHelp" name="Image">

                                </div>

                            </div>
                            <div class="col-12 text-right">
                                <button class="btn btn-success"> Submit</button>
                            </div>

                            
                        </div>
                    }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/assets/js/jquery-3.2.1.min.js"></script>

<script>
    $("body").on("change", "#CategoryID", function () {
        if (this.value == 1) {
            $("#SDiv").show();
            $("#VBDiv").hide();
            $("#CDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (this.value == 2) {
            $("#VBDiv").show();
            $("#SDiv").hide();
            $("#CDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (this.value == 3) {
            $("#CDiv").show();
            $("#VBDiv").hide();
            $("#SDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (this.value == 4) {
            $("#WDiv").show();
            $("#CDiv").hide();
            $("#VBDiv").hide();
            $("#SDiv").hide();
            $("#PDiv").hide();
        }
        else if (this.value == 5) {
            $("#PDiv").show();
            $("#WDiv").hide();
            $("#CDiv").hide();
            $("#VBDiv").hide();
            $("#SDiv").hide();
        }
        else {
            $("#CDiv").hide();
            $("#VBDiv").hide();
            $("#SDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
    });


    $(document).ready(function () {

        if (@SCV == 1) {
            $("#SDiv").show();
            $("#VBDiv").hide();
            $("#CDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (@SCV == 2) {
            $("#VBDiv").show();
            $("#SDiv").hide();
            $("#CDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (@SCV == 3) {
            $("#CDiv").show();
            $("#VBDiv").hide();
            $("#SDiv").hide();
            $("#WDiv").hide();
            $("#PDiv").hide();
        }
        else if (@SCV == 4) {
            $("#WDiv").show();
            $("#CDiv").hide();
            $("#VBDiv").hide();
            $("#SDiv").hide();
            $("#PDiv").hide();
        }
        else if (@SCV    == 5) {
            $("#PDiv").show();
            $("#WDiv").hide();
            $("#CDiv").hide();
            $("#VBDiv").hide();
            $("#SDiv").hide();
        }

    });
</script>