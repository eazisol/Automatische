
@{
    Layout = null;
    string Delete = @ViewBag.Error;
}

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="~/assets/images/Favicon.png" type="image/x-icon" />
    <title>Login</title>
    <!-- Bootstrap Core and Font Icon -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/animate-css/vivify.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Core css -->
    <link rel="stylesheet" href="~/assets/css/main.css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.3.0/css/flag-icon.min.css" rel="stylesheet" />
</head>

<body class="theme-blush">
    <!-- main content-->
    <div class="auth">
        <div class="container">
            
            <div class="forms-container">
                
                <div class="signin-signup">
                    
                    
                       
                    
                    <form class="sign-in-form" method="post" action="@Url.Action("Login", "Account")">
                       
                        <h2 class="title">@Resources.SignIn</h2>
                        <div style="display:none; width:60%" class="alert alert-danger alert-dismissible fade show" id="error" role="alert">
                            @ViewBag.Error
                        </div>
                        <div class="input-field">
                            <i class="fa fa-user"></i>
                            <input type="text" name="Email" placeholder="Email" required />
                        </div>
                        <div class="input-field">
                            <i class="fa fa-lock"></i>
                            <input type="password" name="Password" placeholder="Password" required />
                        </div>

                        <button type="submit" style="width:60%" class="btn solid">@Resources.LOGIN</button>

                        <a href="@Url.Action("Forgetpassword", "Account")" class="text-right">@Resources.Forgotpassword?</a>

                    </form>
                        
                   

                    <form class="sign-up-form" method="post" action="@Url.Action("Register", "Account")">
                        <h2 class="title">Sign up</h2>
                        <div style="display:none; width:60%" class="alert alert-danger alert-dismissible" id="SignUpError" role="alert">
                            Email already exist!
                        </div>
                        <div class="input-field">
                            <i class="fa fa-user"></i>
                            <input type="text" name="username" placeholder="Username" required />
                        </div>
                        <div class="input-field">
                            <i class="fa fa-envelope"></i>
                            <input type="email" name="Email" id="Email" placeholder="Email" required />
                        </div>
                        <div class="input-field">
                            <i class="fa fa-lock"></i>
                            <input type="password" name="password" placeholder="Password" required />
                        </div>
                        <input style="width:60%" type="submit" class="btn" id="SignUpbtn" value="Sign up" />
                       
                    </form>
</div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <img class="logo1" src="~/assets/images/logo.png" alt="user" style="margin-bottom:15%;width:45%">
                        <h3>@Resources.Builddigitaldesignswith</h3>
                        <p>
                            @Resources.Build_run_andscaleyourdigitaldesignsofgardens_endtoendandmore
                        </p>

                        <button class="btn transparent" id="sign-up-btn" style="background-color:#8dc63f">
                            @Resources.SignUP
                        </button>
                        <br>  <br>
                        <button type="button" class="btn transparent dropdown-toggle flag-icon flag-icon-us flag-icon-squared" data-toggle="dropdown"> Language</button>
                        <div class="dropdown-menu ">
                            <a class="dropdown-item " href="@Url.Action("SetCulture","Account",new { culture="en"})"><i class="flag-icon flag-icon-us flag-icon-squared mr-2"></i> English</a>
                            <a class="dropdown-item " href="@Url.Action("SetCulture","Account",new { culture="de"})"><i class="flag-icon flag-icon-de flag-icon-squared mr-2"></i> German</a>
                        </div>
                    </div>
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <img class="logo1" src="~/assets/images/logo.png" alt="user" style="margin-bottom:15%;width:45%">
                        <h3>@Resources.Builddigitaldesignswith</h3>
                        <p>
                            @Resources.Build_run_andscaleyourdigitaldesignsofgardens_endtoendandmore
                        </p>

                        <button class="btn transparent" id="sign-in-btn" style="background-color:#8dc63f">
                            @Resources.SignIn
                        </button>
                        <br>  <br>
                        <button type="button" class="btn transparent dropdown-toggle flag-icon flag-icon-us flag-icon-squared" data-toggle="dropdown">  Language</button>
                        <div class="dropdown-menu ">
                            <a class="dropdown-item " href="@Url.Action("SetCulture","Account",new { culture="en"})"><i class="flag-icon flag-icon-us flag-icon-squared mr-2"></i> English</a>
                            <a class="dropdown-item " href="@Url.Action("SetCulture","Account",new { culture="de"})"><i class="flag-icon flag-icon-de flag-icon-squared mr-2"></i> German</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/assets/js/page/auth.js"></script>



    <script>

        $("body").on("change", "#Email", function () {
            var Email = $("#Email").val();

          
            var model = {

                Email: Email,
            };

            //console.log(model);

            $.ajax({
               type: "POST",
                url: "@Url.Action("CheckEmail", "Account")",
                data: "{Email:'" + Email + "'}",
                contentType: 'application/json; charset=utf-8',
                dataType: 'text',
              
                success: function (r) {
                    //alert(r + " record(s) inserted.");
                    var url = window.location.origin;
                    if (r == 1) {
                        $("#SignUpbtn").prop('disabled', true);
                        $('#SignUpError').fadeIn();
                        $('#SignUpError').fadeOut(10000);
                    }
                    else {
                        $("#SignUpbtn").prop('disabled', false);
                    }
                }
            });

        });





        $(document).ready(function () {

            if ("@Delete" != "") {
                $('#error').fadeIn();
                $('#error').fadeOut(10000);
            }
            else {
                $('#error').fadeOut();
            }

        });
    </script>
</body>
</html>
